@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>BUTTERFLY CINEMA</title>
    <link rel="icon" href="~/Content/img/logo6.png" type="image/x-icon">

    <link type="text/css" rel="stylesheet" href="~/Content/css/error.css" />
</head>

<body>

    <div id="notfound">
        <div class="notfound">
            <div class="notfound-404">
                <h1>Oops!</h1>
                @{
                    var errorMessage = ViewData["ErrorMessage"] as string;
                    var tab = ViewData["Tab"] as string; // Nhận tab từ ViewData
                }

                @if (ViewBag.errorMessage != null)
                {
                    <h2 id="error-message">
                        @errorMessage
                    </h2>
                }
                @*<h2 id="error-message">@ViewData["ErrorMessage"]</h2>*@
            </div>
            <a href="@Url.Action("Manage", "Manage", new { tab = tab })">Quay lại</a>
        </div>
    </div>
</body>

</html>