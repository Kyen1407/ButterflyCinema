@{
    Layout = null;
}

@model ButterflyCinema.Models.Room

@{
    ViewData["Title"] = "Chỉnh sửa Phòng";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BUTTERFLY CINEMA</title>
    <link rel="icon" href="~/Content/img/logo6.png" type="image/x-icon">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/manage.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Paytone+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Monoton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.all.min.js"></script>
    <script src="~/Content/js/jquery-2.1.1.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>

    <style>
        form {
            width: 40%;
            margin-left: 30%;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Chỉnh sửa Phòng</h2>

        <form asp-action="EditRoom" method="post">
            <input type="hidden" asp-for="RoomId" />

            <div class="form-group mb-3" style="width: 100%;">
                <label asp-for="RoomName" class="form-label" for="RoomName">Tên phòng</label>
                <input asp-for="RoomName" type="text" name="RoomName" id="RoomName" class="form-control" required>
            </div>

            <div class="form-group mb-3" style="width: 100%;">
                <label asp-for="CinemaId" class="form-label" for="CinemaId">Mã rạp</label>
                <input asp-for="CinemaId" type="text" name="CinemaId" id="CinemaId" class="form-control" required>
            </div>

            <div class="form-group mb-3" style="width: 100%;">
                <label asp-for="TotalSeats" class="form-label" for="TotalSeats">Số lượng ghế</label>
                <input asp-for="TotalSeats" type="number" name="TotalSeats" id="TotalSeats" class="form-control" required>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Manage" asp-route-tab="room" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</body>
</html>





